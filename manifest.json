{
  "manifest_version": 2,
  "name": "Hole Your Own ClickVenture",
  "version": "0.0.1",
  "icons": { "16": "icon/16.png",
             "48": "icon/48.png",
            "128": "icon/128.png" },
  "description": "You're Playing A ClickVenture. Can You Encounter Every Possible Node?",
  "page_action": {
    "default_icon": {
      "19": "icon/19.png",
      "38": "icon/38.png"
    },
    "default_title": "Hole Your Own ClickVenture",
    "default_popup": "popup.html"
  },
  "author": "Stuart P. Bentley",
  "background": {
    "scripts": [ "lib/clickventure.js", "scripts/background.js" ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["*://www.clickhole.com/clickventure/*"],
      "js": ["scripts/content.js"]
    }
  ],
  "homepage_url": "https://github.com/stuartpb/hole-your-own-clickventure",
  "permissions": [
    "storage",
    "declarativeContent",
    "activeTab",
    "*://www.clickhole.com/clickventure/*"
  ]
}
